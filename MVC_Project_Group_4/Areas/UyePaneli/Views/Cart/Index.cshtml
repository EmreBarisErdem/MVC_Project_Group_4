    h1 {
        font-size: 2rem;
        font-weight: bold;
    }

    .table {
        background-color: #fff;
        border: 1px solid #ddd;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
            font-size: 1rem;
        }

    .btn {
        padding: 0.5rem 1rem;
    }
</style>
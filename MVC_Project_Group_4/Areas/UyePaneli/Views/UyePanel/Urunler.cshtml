@using MVC_Project_Group_4.Models.ViewModels
@model UrunlerVM


@{

    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}


<div class="w3l-menublock py-5">
    <!-- menu block -->
    <div id="w3l-menublock" class="text-center py-lg-4 py-md-3">
        <div class="container">

            <input id="tab1" type="radio" name="tabs" checked>
            <label class="tabtle" for="tab1">Hamburgerler</label>

            <input id="tab2" type="radio" name="tabs">
            <label class="tabtle" for="tab2">Yan Ürünler</label>

            <input id="tab3" type="radio" name="tabs">
            <label class="tabtle" for="tab3">İçecekler</label>

            <input id="tab4" type="radio" name="tabs">

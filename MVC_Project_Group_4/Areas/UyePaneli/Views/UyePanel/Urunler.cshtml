@using MVC_Project_Group_4.Models.ViewModels
@model UrunlerVM


@{

    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}



<div class="w3l-menublock py-5">
    <!-- menu block -->
    <div id="w3l-menublock" class="text-center py-lg-5 py-md-3">
        <div class="container d-flex flex-column">

            <input id="tab5" type="radio" name="tabs" checked>
            <label class="tabtle" for="tab5">Menüler</label>



            <section id="content5" class="tab-content text-left">

                <div class="row menu-body">
                    <!-- Section starts: Hamburgers -->
                    <div class="col-lg-6 menu-section pr-lg-5">
                        <!-- Item starts -->
                        @foreach (var item in Model.Menuler)
                        {
                            <div class="menu-item">
                                <div>
                                    <div class="row border-dot no-gutters">
                                        <div class="col-8 menu-item-name">
                                            <h6>@item.Ad</h6>
                                        </div>
                                        <div class="col-4 menu-item-price text-right">
                                            <h6>@item.Fiyat TL</h6>
                                        </div>
                                    </div>
                                    <div class="menu-item-description">
                                        <p>@item.Aciklama</p>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <form>
                                            <button type="submit" class="btn btn-outline-warning" asp-controller="Siparis" asp-action="MenuDetay" asp-route-id="@item.MenuID">+</button>
                                        </form>


                                    </div>

                                </div>
                            </div>

                        }
                        <!-- Item ends -->
                    </div>

                    <div class="col-lg-6 menu-section pl-lg-5 text-center">
                        <img src="~/assets/images/burger1.png" alt="" class="radius-image img-fluid">
                    </div>
                    <!-- Section ends: Hamburgers -->
                </div>
            </section>

        </div>
    </div>
    <!-- menu block -->
</div>



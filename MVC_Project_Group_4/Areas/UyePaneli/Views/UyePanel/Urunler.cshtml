            <input id="tab5" type="radio" name="tabs">
            <label class="tabtle" for="tab5">Menüler</label>

            <section id="content1" class="tab-content text-left">
                <!-- <h3 class="title-small text-center">Coffee - <span>We make the delicious coffee</span></h3> -->
                <div class="row menu-body">
                    <!-- Section starts: Appetizers -->
                    <div class="col-lg-6 menu-section pr-lg-5">
                        <!-- Item starts -->
                        @foreach (var item in Model.Hamburgerler)
                        {
                            <div class="menu-item">
                                <div>
                                    <div class="row border-dot no-gutters">
                                        <div class="col-8 menu-item-name">
                                            <h6>@item.Ad</h6>
                                        </div>
                                        <div class="col-4 menu-item-price text-right">
                                            <h6>@item.Fiyat TL</h6>
                                        </div>
                                    </div>
                                    <div class="menu-item-description">
                                        <p>@item.Aciklama</p>
                                    </div>
                                </div>
                            </div>

                        }

                    </div>
                    <!-- Section ends: Appetizers -->
                    <!-- Section starts: Appetizers -->
                    <div class="col-lg-6 menu-section pl-lg-5 text-center">
                        <img src="~/assets/images/burger1.png" alt="" class="radius-image img-fluid">
                    </div>
                    <!-- Section ends: Appetizers -->

            </section>


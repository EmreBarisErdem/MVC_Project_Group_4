@model IcecekVM

@{
    ViewData["Title"] = "İçecek Listele";
}

<div class="text-center mb-4">
    <h1 class="mb-4">İçecekler</h1>
    <p>
        <a asp-action="IcecekEkle" class="btn btn-primary">Yeni İcecek Ekle</a>
    </p>
</div>


@if (TempData["infoguncelle"] is not null)
{
<div class="alert alert-success text-center mb-2"> @TempData["infoguncelle"]</div>
}
@if (TempData["infosil"] is not null)
{
<div class="alert alert-danger text-center mb-2"> @TempData["infosil"]</div>
}

<hr />
<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
        <tr>
            <th>
                ID
            </th>
          
            <th>
                Ad
            </th>
            <th>
               Fiyat
            </th>
            <th>
                Açıklama
            </th>
            <th>
                Fotoğraf
            </th>
            <th>
                Adet
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Icecekler)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IcecekID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aciklama)
            </td>
                <td>
                    
                        <img src="~/Pictures/Icecekler/@item.PicturePath" class="img-fluid" alt="@item.Ad" style="max-width: 120px; max-height: 90px;" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adet)
            </td>
                <td>
                   
                    <a class="btn btn-warning" asp-route-id="@item.IcecekID" asp-controller="Icecek" asp-action="IcecekGuncelle">Güncelle</a>

                </td>
                <td>
                    
                    <a class="btn btn-danger" asp-route-id="@item.IcecekID" asp-controller="Icecek" asp-action="IcecekSil" onclick="return confirm('Emin misiniz?')">Sil</a>
                </td>

        </tr>
}
    </tbody>
</table>
</div>

<style>
    h1 {
        font-size: 2rem;
        font-weight: bold;
    }

    .table {
        background-color: #fff;
        border: 1px solid #ddd;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

    .btn {
        padding: 0.5rem 1rem;
    }
</style>

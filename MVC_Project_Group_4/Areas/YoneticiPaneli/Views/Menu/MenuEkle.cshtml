@using MVC_Project_Group_4.Models.ViewModels
@model MenuVM

@{
    ViewData["Title"] = "MenuEkle";
}

<h1>MenuEkle</h1>

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MenuEkle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="MenuEkle.Ad" class="control-label"></label>
                <input asp-for="MenuEkle.Ad" class="form-control" />
                <span asp-validation-for="MenuEkle.Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuEkle.Fiyat" class="control-label"></label>
                <input asp-for="MenuEkle.Fiyat" class="form-control" />
                <span asp-validation-for="MenuEkle.Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuEkle.Aciklama" class="control-label"></label>
                <input asp-for="MenuEkle.Aciklama" class="form-control" />
                <span asp-validation-for="MenuEkle.Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuEkle.PicturePath" class="control-label"></label>
                <input asp-for="MenuEkle.PicturePath" class="form-control" type="file" />
                <span asp-validation-for="MenuEkle.PicturePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuEkle.Adet" class="control-label"></label>
                <input asp-for="MenuEkle.Adet" class="form-control" />
                <span asp-validation-for="MenuEkle.Adet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuEkle.IcecekID" class="control-label"></label>
                <select  asp-for="MenuEkle.IcecekID" class="form-control" asp-items="Model.Icecekler"></select>
               
            </div>
            <div class="form-group">
                <label asp-for="MenuEkle.TatliID" class="control-label"></label>
                <select asp-for="MenuEkle.TatliID" class="form-control" asp-items="Model.Tatlilar" ></select>
               
            </div>
            <div class="form-group">
                <label asp-for="MenuEkle.HamburgerID" class="control-label"></label>
                <select asp-for="MenuEkle.HamburgerID" class="form-control" asp-items="Model.Hamburgerler"></select>
                
            </div>
            <div class="form-group">
                <label asp-for="MenuEkle.EkstraMalzemeID" class="control-label"></label>
                <select asp-for="MenuEkle.EkstraMalzemeID" class="form-control" asp-items="Model.EkMalzemeler" ></select>
            </div>
                
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MenuListele">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

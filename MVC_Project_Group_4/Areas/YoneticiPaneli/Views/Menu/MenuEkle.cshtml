
@model MenuVM

@{
    ViewData["Title"] = "Menüler";
}

<div class="container my-4">
    <div class="text-center mb-4">
        <h1>Yeni Menü Ekle</h1>
    </div>

    @if (TempData["infoguncelle"] is not null)
    {
        <div class="alert alert-success text-center mb-2">@TempData["infoguncelle"]</div>
    }
    @if (TempData["infosil"] is not null)
    {
        <div class="alert alert-danger text-center mb-2">@TempData["infosil"]</div>
    }

    <form asp-action="MenuEkle" enctype="multipart/form-data" method="post" class="border p-4 rounded">
        <div class="row">
            <div class="col-md-6">
            
             
                <div class="mb-3">
                    <label asp-for="MenuEkle.Ad" class="form-label">Ad</label>
                    <input asp-for="MenuEkle.Ad" class="form-control">
                    <span asp-validation-for="MenuEkle.Ad" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MenuEkle.Fiyat" class="form-label">Fiyat</label>
                    <input asp-for="MenuEkle.Fiyat" class="form-control">
                    <span asp-validation-for="MenuEkle.Fiyat" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MenuEkle.Aciklama" class="form-label">Açıklama</label>
                    <textarea asp-for="MenuEkle.Aciklama" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="MenuEkle.Aciklama" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MenuEkle.PicturePath" class="form-label">Resim Yolu</label>
                    <input asp-for="MenuEkle.PicturePath" class="form-control">
                    <span asp-validation-for="MenuEkle.PicturePath" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="MenuEkle.Adet" class="form-label">Adet</label>
                    <input asp-for="MenuEkle.Adet" class="form-control" type="number">
                    <span asp-validation-for="MenuEkle.Adet" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="MenuEkle.SelectedIcecekID" class="form-label"></label>
                    <select asp-for="MenuEkle.SelectedIcecekID" class="form-control" asp-items="Model.MenuEkle.Icecekler"></select>
                    <span asp-validation-for="MenuEkle.SelectedIcecekID" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MenuEkle.SelectedTatliID" class="form-label"></label>
                    <select asp-for="MenuEkle.SelectedTatliID" class="form-control" asp-items="Model.MenuEkle.Tatlilar"></select>
                    <span asp-validation-for="MenuEkle.SelectedTatliID" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MenuEkle.SelectedHamburgerID" class="form-label"></label>
                    <select asp-for="MenuEkle.SelectedHamburgerID" class="form-control" asp-items="Model.MenuEkle.Hamburgerler"></select>
                    <span asp-validation-for="MenuEkle.SelectedHamburgerID" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MenuEkle.SelectedEkMalzemeID" class="form-label"></label>
                    <select asp-for="MenuEkle.SelectedEkMalzemeID" class="form-control" asp-items="Model.MenuEkle.EkMalzemeler"></select>
                    <span asp-validation-for="MenuEkle.SelectedEkMalzemeID" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="text-center mt-4">
            <input type="submit" value="Menü Ekle" class="btn btn-primary" />
        </div>
    </form>
</div>
<div class="text-center mt-2">
    <a asp-action="MenuListele">Listeye Geri Dön</a>
</div>

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
    }
    .form-label {
        font-weight: bold;
    }
    .form-control {
        border-radius: 0.25rem;
    }
    .btn-primary {
        padding: 0.5rem 2rem;
    }
    .alert {
        max-width: 600px;
        margin: 0 auto;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

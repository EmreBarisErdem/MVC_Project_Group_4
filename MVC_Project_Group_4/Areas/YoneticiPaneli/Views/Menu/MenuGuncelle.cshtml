@model MenuEkleVM

@{
    ViewData["Title"] = "Menü Güncelle";
}

<h1 class="text-center">Menü Güncelle</h1>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4 border p-4 rounded">
        <form asp-action="MenuGuncelle" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label">Ad</label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label">Fiyat</label>
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label">Açıklama</label>
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PicturePath" class="control-label">Resim Yolu</label>
                <input asp-for="PicturePath" class="form-control" type="file" />
                <span asp-validation-for="PicturePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adet" class="control-label">Adet</label>
                <input asp-for="Adet" class="form-control" />
                <span asp-validation-for="Adet" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SelectedBoy" class="form-label">Boy</label>
                <select asp-for="SelectedBoy" class="form-control" asp-items="Model.Boylar"></select>
                <span asp-validation-for="SelectedBoy" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Güncelle" class="btn btn-primary" onclick="return confirm('Emin misiniz?')" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-2">
    <a asp-action="MenuListele">Listeye Geri Dön</a>
</div>

<style>
    label {
        font-weight: bold;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

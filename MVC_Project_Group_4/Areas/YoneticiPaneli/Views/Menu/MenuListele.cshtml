@model MenuVM

@{
    ViewData["Title"] = "MenuListele";
}

<h1>MenuListele</h1>
@if (TempData["infoguncelle"] is not null)
{
    <div class="alert alert-success text-center mb-2"> @TempData["infoguncelle"]</div>
}
@if (TempData["infosil"] is not null)
{
    <div class="alert alert-danger text-center mb-2"> @TempData["infosil"]</div>
}
<p>
    <a asp-action="MenuEkle" class="btn btn-primary">Yeni Menü Ekle</a>
</p>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu.MenuID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu.Aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu.PicturePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu.Adet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menuler) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MenuID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aciklama)
               
            </td>
            <td>
              @*   @Html.DisplayFor(modelItem => item.PicturePath) *@
                    <img src="~/Pictures/Menuler/@item.PicturePath" width="120px" height="90px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adet)
            </td>
            <td>
                @* @Html.ActionLink("Güncelle", "MenuGuncelle", new { id=item.MenuID }) | *@
                    <a class="btn btn-warning" asp-route-id="@item.MenuID" asp-controller="Menu" asp-action="MenuGuncelle" >Güncelle</a>
              
            </td>
            <td>
                    @*  @Html.ActionLink("Sil", "MenuSil", new { id=item.MenuID } ) *@
                    <a class="btn btn-danger" asp-route-id="@item.MenuID" asp-controller="Menu" asp-action="MenuSil" onclick="return confirm('Emin misiniz?')">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>

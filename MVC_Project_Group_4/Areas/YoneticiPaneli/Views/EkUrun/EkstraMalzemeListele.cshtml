@* @model IEnumerable<MVC_Project_Group_4.Models.Concrete.EkstraMalzeme> *@

@model EkstraMalzemeVM

@{
    ViewData["Title"] = "Ek Ürünler Listele";
}



<div class="text-center mb-4">
    <h1 class="mb-4">Ek Ürünler</h1>
   <p>
    <a asp-action="EkstraMalzemeEkle" class="btn btn-primary">Ekstra Malzeme Ekle</a>
</p>
</div>

@if (TempData["infoguncelle"] is not null)
{
    <div class="alert alert-success text-center mb-2"> @TempData["infoguncelle"]</div>
}
@if (TempData["infosil"] is not null)
{
    <div class="alert alert-danger text-center mb-2"> @TempData["infosil"]</div>
}
<hr />
<div class="table-responsive">
<table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>
                ID
            </th>
            <th>
                Ad
            </th>
            <th>
                Fiyat
            </th>
            <th>
                Açıklama
            </th>
            <th>
                Fotoğraf
            </th>
            <th>
                Adet
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EkstraMalzemeler)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EkstraMalzemeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fiyat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aciklama)
                </td>
                <td>
                    
              @*       <img src="~/Pictures/Ek_Urunler/@item.PicturePath" width="120px" height="90px" /> *@
                        <img src="~/Pictures/Ek_Urunler/@item.PicturePath" class="img-fluid" alt="@item.Ad" style="max-width: 120px; max-height: 90px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adet)
                </td>
                <td>
                    @*  @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) | *@
                    <a class="btn btn-warning" asp-route-id="@item.EkstraMalzemeID" asp-controller="EkUrun" asp-action="EkstraMalzemeGuncelle">Güncelle</a>

                </td>
                <td>
                    @*   @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) *@
                    <a class="btn btn-danger" asp-route-id="@item.EkstraMalzemeID" asp-controller="EkUrun" asp-action="EkstraMalzemeSil" onclick="return confirm('Emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<style>
    h1 {
        font-size: 2rem;
        font-weight: bold;
    }

    .table {
        background-color: #fff;
        border: 1px solid #ddd;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

    .btn {
        padding: 0.5rem 1rem;
    }
</style>

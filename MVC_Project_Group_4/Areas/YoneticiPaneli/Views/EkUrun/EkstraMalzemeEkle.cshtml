

@model EkstraMalzemeEkleVM

@{
    ViewData["Title"] = "Ekstra Malzeme Ekle";
}

<div class="container my-4">
    <div class="text-center mb-4">
        <h1>Ekstra Malzeme Ekle</h1>
    </div>

    <div class="row">
        <div class="col-md-4 offset-md-4 border p-4 rounded">
            <form asp-action="EkstraMalzemeEkle" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Ad" class="form-label">Ad</label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Fiyat" class="form-label">Fiyat</label>
                    <input asp-for="Fiyat" class="form-control" />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Aciklama" class="form-label">Açıklama</label>
                    <input asp-for="Aciklama" class="form-control" />
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PicturePath" class="form-label">Resim Yolu</label>
                    <input asp-for="PicturePath" class="form-control" type="file" />
                    <span asp-validation-for="PicturePath" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Adet" class="form-label">Adet</label>
                    <input asp-for="Adet" class="form-control" />
                    <span asp-validation-for="Adet" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <input type="submit" value="Ekstra Malzeme Ekle" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>
<div class="text-center mt-2">
    <a asp-action="EkstraMalzemeListele">Listeye Geri Dön</a>
</div>


<style>
    .form-label {
        font-weight: bold;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

